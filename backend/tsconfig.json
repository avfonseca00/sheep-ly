{
    "compilerOptions": {
        "target": "ES2022",               
        "module": "ESNext",               
        "moduleResolution": "node",       
        "esModuleInterop": true,        
        "strict": true,                   
        "skipLibCheck": true,             
        "outDir": "./dist",               
        "rootDir": "./src",               
        "allowJs": true,                  
        "forceConsistentCasingInFileNames": true,  
        "baseUrl": "./src",               
        "paths": {                        
            "@controllers/*": ["./controllers/*"],
            "@models/*": ["./models/*"],
            "@routes/*": ["./routes/*"]
        }
    },
    "include": ["src/**/*"],            
    "exclude": ["node_modules"]         
}